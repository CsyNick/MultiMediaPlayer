<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayoutRoot">

        <TextView
            android:id="@+id/videoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_margin="20dp"
            android:text="ㄅㄉˇㄎㄑㄋㄑㄇㄋㄎㄑㄇㄋㄎㄑ " />
        <SurfaceView
            android:id="@+id/surface"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </SurfaceView>

        <ImageView
            android:id="@+id/VideoThumbNails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/play"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:src="@mipmap/play_button"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/linearLayoutMediaController"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:background="#514E64">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textViewPlayed"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="0:00:00"
                android:padding="0dp"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>



            <SeekBar
                android:id="@+id/seekBarProgress"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_above="@id/player_footer_bg"
                android:thumb="@mipmap/seek_handler"
                android:progressDrawable="@drawable/seekbar_progress" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textViewLength"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="0:00:00"
                android:textSize="13sp"
                android:padding="0dp"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>



    </FrameLayout>

</LinearLayout>
